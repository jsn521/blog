body {
    font: 12px "微软雅黑", "Lucida Grande", Helvetica, Arial, sans-serif;
    font-size: 1em;
}
html{
    font-size: 100%;
}
.section {
    margin-bottom: 5px;
}

.article-info {
    overflow: hidden;
    width: 100%;
}

.article-info span {
    margin-right: 5px;
}

.article-info span:hover {
    cursor: pointer;
}

.article-info i {
    vertical-align: middle;
    display: inline-block;
    width: 18px;
    height: 18px;
    overflow: hidden;
    background-image: url(../images/background.png);
    margin-top: -4px;
    /*padding: 9px;*/
    line-height: 0;
}

.pubtime {
    background-position: -46px -22px;
}

.category {
    background-position: -118px -70px;
}

.tag {
    background-position: 0px -46px;
}

.good {
    background-position: -190px -142px;
}

.summary {
    background-color: #F6F6F6;
    padding: 10px 10px 10px 20px;
    border-radius: 10px;
    border: 1px solid #F6F6F6;
}

.summary:hover {
    border: 1px solid orange;
}

.brand {
    font-style: italic;
    color: orange;
}

.page {
    width: 100%;
    height: 20px;
    margin-top: 10px;
}

.page .active a {
    color: orange;
}

