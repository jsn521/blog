.page li {
    list-style: none;
    display: table-cell;
    vertical-align: middle;
    float: left;
    padding-left: 6px;
    width: 14px;
    height: 20px;
    border: 1px solid #0088cc;
    cursor: pointer;
    margin-right: 5px;
    border-radius: 5px;
    background-color: #000000;
    color: #ffffff;
}

.page .skip {
    border: 0px solid orange;
}